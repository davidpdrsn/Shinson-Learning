<% cache [current_user, @technique] do %>
  <% present @technique do |technique_presenter| %>
    <%= render layout: "shared/controls", locals: { heading: technique_presenter.name } do %>
      <% if current_user == technique_presenter.user %>
        <%= link_to "Edit", edit_technique_path(@technique), class: "button button--small" %>
        <%= link_to "Delete", @technique, method: :delete, class: "button button--small", data: { confirm: "Sure?" } %>
      <% end %>
    <% end %>

    <%= simple_format technique_presenter.description %>

    <p>
      Category: <%= technique_presenter.category_name %><br>
      Belt: <%= technique_presenter.belt_pretty_print %><br>
      Created: <%= technique_presenter.timestamp %>
    </p>

    <p>
      <% present technique_presenter.user do |user_presenter| %>
        Added by <%= user_presenter.link_to_user %>
      <% end %>
    </p>

    <%= render partial: "notes_list", locals: { notes: @notes } %>
  <% end %>
<% end %>
