<%= simple_form_for @technique do |f| %>
  <%= f.error_notification %>
  <%= f.input :name, autofocus: true %>
  <%= f.input :description, hint: "Description can contain markdown" %>
  <%= f.association :belt, label_method: :pretty_print, prompt: "Choose a belt" %>
  <%= f.association :category, prompt: "Choose a category" %>
  <%= f.button :submit %>
<% end %>
